<% if current_user.confirmed %>

<% if flash[:mail].present?  %>
  <div class="flash-mail">
    <i class="material-icons close-flash">close</i>
    <p><%= flash[:mail] %></p>
  </div>
<% end %>

<main>
  <section class="main container center-align">
    <div class="row">
      <section class="col s12">
        <div class="user_info card">
          <h3>Welcome <%= "#{current_user.firstname} #{current_user.lastname}" %> </h3>
          <%= render "partials/search_for_taskee" %>
            <div class="col 12">
              <div class="col l6">
              <% if  @current_user.longitude == nil %>
                <%= button_to "Tag My Location", @current_user, remote: true class: "tag-location" %>
                <% else %>
                 <%= button_to "Update Location", @current_user, remote: true class: "tag-location" %>
                 <% end %>
                <!-- <button onclick="getLocation()" class="btn"> Tag my location </button> -->
              </div>
               <div class="col l6">

                <p id="demo"></p>
                </div>
                </div>
        </div>

      </section>
    </div>
  </section>
</main>

<% else %>

<% if flash[:mail].present?  %>
  <div class="flash-mail">
    <i class="material-icons close-flash">close</i>
    <p><%= flash[:mail] %></p>
  </div>
<% end %>

<main>
  <section class="confirm-mail-first container">
  <div class="row">
    <div class="col s12">
      <div class="user_info card">
        <h5>Confirm your email address</h5>
        <p>
          To continue, please click on the link sent to
          <strong><%= current_user.email %></strong>
          This will help to validate your account.
        </p>
        <%= link_to "Resend Confirmation Link", resend_mail_path, method: :post %>
      </div>
    </div>
  </div>
</section>
</main>

<% end %>