<div class="bids">
  <div class="row">
    <div class="col s2 taskee_img">
      <%= image_tag current_user.image_url, size: "100x100", alt: "Taskee profile image" %>
    </div>
    <div class="col s10">
      <div class="row">
        <div class="col s12 taskee_name">
          <h5><%= current_user.fullname %></h5>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <h3>Your Bid</h3>
    </div>
    <div class="col s12">
      <%= form_for :bid, url: dashboard_bid_path(@bid), method: :patch do |f| %>
        <%= render "partials/error_msg", object:  @bid%>
        <div class="row">
          <div class="col s6 price">
            <h5>Price</h5>
            <div class="input-field col s12">
              <%= f.label :price, "Your bid price" %>
              <%= f.number_field :price, required: true %>
            </div>
          </div>
          <div class="col s6 timeline">
            <h5>Timeline ( <small><b><%= @task.start_date.to_formatted_s(:rfc822) %></b></small> - <small><b><%= @task.end_date.to_formatted_s(:rfc822) %></b></small> )</h5>
            <div class="input-field col s6">
              <%= f.label :start_date %>
              <%= f.date_field :start_date, class: "datepicker", required: true %>
            </div>
            <div class="input-field col s6">
              <%= f.label :end_date %>
              <%= f.date_field :end_date, class: "datepicker", required: true %>
            </div>
          </div>
          <div class="col s12">
            <h5>Your comments</h5>
            <%= f.label :description, "Comments" %>
            <%= f.text_field :description, required: true %>
          </div>
          <div class="col s12">
            <%= f.submit "Update Bid", class: "btn btn-large right" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
