<div class="row container">
  <div class="col s10 offset-s1 l8 offset-l2 service-rating-row">
    <%= form_for @service_rating do |f| %>
    <div class="row">
      <% if current_user.tasker? %>

      <%= fields_for :artisan, @service_rating.service.artisan do |artisan_fields| %>
      <div class="col s2 offset-s5 l2 offset-l5">
        <%= cl_image_tag @service_rating.service.tasker.image_url, class: "user-image" %>
      </div>
      <div class="col s6 offset-s3 l6 offset-l3">
        <p class="center">
          <%= @service_rating.service.tasker.firstname %> <%= @service_rating.service.tasker.lastname %>
        </p>
      </div>
      <% end %>

      <% end %>

      <% if current_user.artisan? %>

      <%= fields_for :tasker, @service_rating.service.tasker do |tasker_fields| %>
      <div class="col s6 offset-s3 l6 offset-l3">
        <%= cl_image_tag @service_rating.service.artisan.image_url, class: "user-image" %>
      </div>
      <div class="col s6 offset-s3 l6 offset-l3">
        <p class="center">
          <%= @service_rating.service.artisan.firstname %> <%= @service_rating.service.artisan.lastname %>
        </p>
      </div>
      <% end %>

      <% end %>
    </div>
    <div class="row">
      <div class="col s8 offset-s2 l8 offset-l2">
        <div id="service-rating-view" style="margin:auto;"></div>
        <div class="field">
          <%= f.hidden_field :rating %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s6 offset-s3 l6 offset-l3">
        <div class="field">
          <%= f.label :private_feedback %>
          <br/>
          <%= f.text_area :private_feedback, readonly: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s6 offset-s3 l6 offset-l3">
        <div class="field">
          <%= f.label :public_feedback %>
          <br/>
          <%= f.text_area :public_feedback, readonly: true %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
