<div class="container-large">
  <div class="row">
    <div class="modal-content col s12">
      <h4><%= @applicant.fullname%></h4>
      <ul class="li-item">
        <% @applicant.skillsets.each do |skillset| %>
        <li class="trade">
          <%= skillset.name %>&nbsp
        </li>
        <% end %>
      </ul>

        </div>
        <div class="modal-content col s10">
            <% @response.response.keys.each do |question| %>
            <ul>
                <li><%= question %>
                </li>
                <li class="answers">
                    <% ans = @response.response[question] %>
                    <% if ans.is_a?(Array) %>
                        <% ans.each do |a| %>
                            <p><%= a %></p>
                        <% end %>
                    <% else %>
                        <p><%= ans %></p>
                    <% end %>
                </li>
                <% end %>
            </ul>


      <%= form_for @applicant, url: admin_applicant_path, method: :patch do |f| %>
      <div class="field horizontal-radio-buttons">
        <%= f.radio_button :status,  "4" %>
        <%= f.label :status_4, "Strong No"%>
        <%= f.radio_button :status, "3" %>
        <%= f.label :status_3, "No" %>
        <%= f.radio_button :status,  "2" %>
        <%= f.label :status_2, "Yes"%>
        <%= f.radio_button :status, "1" %>
        <%= f.label :status_1, "Strong Yes" %>
      </div>

      <div class="field">
        <%= f.text_area :reason, class: 'form-control materialize-textarea', required: true%>
        <%= f.label :reason, "Reasons" %>
      </div>
      <%= f.submit "Update", class: "btn view-btn" %>
      <% end %>
    </div>
  </div>
</div>
