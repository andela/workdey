<section class="main container">
  <div class="row">
    <div class="col m12">
      <div class="row">
        <div class="col m8 offset-m1">
          <h1 class="inline">Bids</h1>
          <%= link_to new_bidding_path, class: 'btn-floating btn-large waves-effect waves-light red tooltipped',
            id: 'new-bid-btn', "data-position": "left", "data-delay": "50", "data-tooltip": "Add new bid" do %>
            <i class="material-icons">add</i>
          <% end %>
          <table id="bids-table">
            <thead>
              <tr>
                  <th data-field="id">Task</th>
                  <th data-field="description">Description</th>
                  <th data-field="price-range">Price Range</th>
              </tr>
            </thead>
            <tbody>
             <%= render @biddings %>
            </tbody>
            </table>
            <%= will_paginate @biddings %>
        </div>
      </div>
    </div>
  </div>
</section>
