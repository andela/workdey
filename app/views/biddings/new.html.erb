<section class="main container">
<% if @bidding.errors.any? %>
 <div id="error_explanation">
  <h3><%= pluralize(@bidding.errors.count, "error") %></h3>
  <ul>
    <% @bidding.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
 </div>
<% end %>
    <div class="row">
      <div class="col m12">
        <div class="row">
          <div class="col m5 offset-m1">
          <% if params[:action] == "new" %>
            <h2>New Bid</h2>
          <% else %>
            <h2>Update bid</h2>
          <% end %>
            <%= render 'form' %>
          </div>
        </div>
      </div>
    </div>
</section>
